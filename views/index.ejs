<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs');  %>
    <title>Tweeter</title>
</head>
<body>
    <%- include('./partials/nav.ejs');  %>
    <% for (let i = 0; i < tweets.length; i++) { %>
    <div class="columns is-centered">
        <div class="card column is-two-thirds my-card-class">
            <header class="card-header">
                <div class="card-header-title">
                    <h1 class="is-size-2"><%= tweets[tweets.length-i-1].title %><br><span class="is-size-4"><%let date = new Date(tweets[tweets.length-i-1].createdAt);%><%=date.toDateString();%></span></h1>
                </div>
                <h4></h4>
                <% if(tweets[tweets.length-i-1].sponsored) { %>
                <p>***This Post Is Sponsored</p>
                <% } %>
            </header>
            <div class="card-content">
                <div class="content">
                    <p class="is-size-4"><%= tweets[tweets.length-i-1].text %></p><br>
                    <div class="card-image">
                        <img class="tweet-img" src="<%=tweets[tweets.length-i -1].img%>">
                    </div>
                    <div class="block has-text-right">
                        <p class="is-size-5">--<%=tweets[tweets.length-i-1].author%></p>
                    </div>
                </div>
            </div>
            <footer class="card-footer">
                <div class="columns">
                    <div class="column">
                        <a href="/tweets/<%=tweets[tweets.length-i-1]['_id']%>/edit" class="card-footer-item button is-primary is-focused is-one-fifth">Edit</a>
                    </div>
                    <div class="column">
                        <form action="/tweets/<%=tweets[tweets.length-i-1]['_id']%>?_method=DELETE" method = "POST">
                            <button class="card-footer-item button is-danger" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </footer>
            </div>
        </div>
    </div>
    <% } %>

</body>
</html>